<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".activities.ProductosActivity"
    android:layout_margin="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/producto_img_producto"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_weight="1"
            app:srcCompat="@android:color/transparent" />

        <TextView
            android:id="@+id/producto_txt_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textAlignment="center" />

        <TextView
            android:id="@+id/producto_txt_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textAlignment="center" />

        <Button
            android:id="@+id/producto_btn_comprar"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#91ffae"
            android:onClick="comprar"
            android:text="COMPRAR"
            android:textAlignment="center"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>