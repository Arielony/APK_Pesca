<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.RegistrarActivity"
    android:layout_margin="25dp">


    <TextView
        android:id="@+id/inicio"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Registro de Usuario nuevo"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nomusu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de Usuario" />

    <EditText
        android:id="@+id/registrar_txt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite nombre de usuario"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/bl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/conusu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contrase単a" />

    <EditText
        android:id="@+id/registrar_txt_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Contrase単a"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/conusu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite nuevamente la contrase単a" />

    <EditText
        android:id="@+id/registrar_txt_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Contrase単a"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/bl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail" />

    <EditText
        android:id="@+id/registrar_txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese e-mail"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/bl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/rut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rut" />

    <EditText
        android:id="@+id/registrar_txt_rut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese rut"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/registrar_btn_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="registrar"
        android:text="Registrar" />
</LinearLayout>